<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
</head>
<body class="dark:bg-black dark:text-white bg-white text-black font-sans">
    <%- include('partials/header') %>
    <div class="dark:bg-black dark:text-white text-gray-900 flex justify-center">
        <div class="dark:bg-black dark:text-white max-w-screen-xl m-0 sm:m-10 sm:rounded-lg flex items-center justify-center">
            <div class="dark:bg-black dark:text-white p-6 sm:p-12">
                <div class="dark:bg-black dark:text-white mt-12 flex flex-col items-center">
                    <h1 class="dark:bg-black dark:text-white text-2xl xl:text-3xl font-extrabold">
                        Login
                    </h1>
                    <div>
                        <img src="/images/user.png" class="dark:bg-black dark:text-white w-32 mx-auto" alt="Kemistry Knotes" />
                    </div>
                    <div class="dark:bg-black dark:text-white w-full flex-1 mt-3">
                        <div class="dark:bg-black dark:text-white mx-auto max-w-xs">
                            <form action="/login" method="post">
                                <input class="w-full px-8 py-4 text-black rounded-lg font-medium bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white" name="email" type="email" placeholder="Email" required />
                            <div class="dark:bg-black dark:text-white relative">
                                <input class="w-full px-8 py-4 text-black rounded-lg font-medium bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white mt-5 hPassword" name="password" type="password" placeholder="Password" required/> <i class="text-black fa-solid fa-eye free absolute right-3 bottom-5 cursor-pointer" id="password"></i>
                            </div>
                                <button type="submit" class="dark:bg-black dark:text-white free mt-5 tracking-wide font-semibold bg-indigo-500 text-gray-100 w-full py-4 rounded-lg hover:bg-indigo-700 transition-all duration-300 ease-in-out flex items-center justify-center focus:shadow-outline focus:outline-none">
                                    <i class="dark:bg-black dark:text-white fa-solid fa-right-to-bracket free w-6 h-6 pt-1"></i>
                                    <span class="dark:bg-black dark:text-white free ml-3">
                                        Login
                                    </span>
                                </button>
                            </form>
                            <p class="dark:bg-black dark:text-white mb-4 mt-3 text-xs text-right">
                                <a href="/signup" class="dark:bg-black dark:text-white text-blue-400 free drop-shadow-md">Don't have an account? Sign up now</a>
                            </p>    
                            <p class="dark:bg-black dark:text-white text-xs text-gray-600 text-center">
                                I agree to abide by templatana's
                                <a href="#" class="dark:bg-black dark:text-white border-b border-gray-500 border-dotted">
                                    Terms of Service
                                </a>
                                and its
                                <a href="#" class="dark:bg-black dark:text-white border-b border-gray-500 border-dotted">
                                    Privacy Policy
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="dark:bg-black dark:text-white flex-1 bg-indigo-100 text-center hidden lg:flex">
                <div class="dark:bg-black dark:text-white m-12 xl:m-16 w-full bg-contain bg-center bg-no-repeat" style="background-image: url('https://storage.googleapis.com/devitary-image-host.appspot.com/15848031292911696601-undraw_designer_life_w96d.svg');">
                </div>
            </div>
        </div>
    </div>
    <!-- Google Login Button -->
    <h2 class="text-xl text-blue-700 font-semibold">SignIn With Google</h2>
<div class="flex justify-center items-center mb-8 mt-3">
    <a href="/auth/google" class="flex items-center gap-3 px-6 py-3 bg-white text-gray-700 border border-gray-300 rounded-full shadow hover:shadow-md transition">
      <img src="https://developers.google.com/identity/images/g-logo.png" alt="Google logo" class="w-6 h-6" />
      <span class="font-medium">Sign in with Google</span>
    </a>
  </div>
    
    <%- include('partials/footer') %>
    <script src="script.js"></script>
    <script>
    let passwordIcon = document.getElementById("password");
    let hPassword = document.querySelector(".hPassword"); // Select the first input element

    passwordIcon.addEventListener("click", () => {
        if (hPassword.type === "password") {
            hPassword.type = "text";
            passwordIcon.classList.remove("fa-eye");
            passwordIcon.classList.add("fa-eye-slash"); // Change icon to 'hide'
        } else {
            hPassword.type = "password";
            passwordIcon.classList.remove("fa-eye-slash");
            passwordIcon.classList.add("fa-eye"); // Change icon back to 'show'
        }
    });
    </script>
</body>
</html>
