<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head') %>
    <title>Login to Allinone | Access Your Account</title>
    <link rel="stylesheet" href="/css/input.css" />
  </head>
  <body class="dark:bg-black dark:text-white bg-white text-black font-sans">
    <%- include('partials/header') %>
    <div class="dark:bg-black dark:text-white text-gray-900">
      <div class="dark:bg-black dark:text-white">
        <div class="dark:bg-black dark:text-white p-6 sm:p-12">
          <div class="w-96 dark:bg-black dark:text-white mt-12 mx-auto">
            <h1
              class="dark:bg-black dark:text-white text-2xl xl:text-3xl font-extrabold"
            >
              Login
            </h1>

            <div class="dark:bg-black dark:text-white w-full mt-3">
              <div class="dark:bg-black dark:text-white mx-auto">
                <form action="/login" method="post">
                  <!-- Email input -->
                  <div class="form mt-5">
                    <input
                      type="email"
                      name="email"
                      autocomplete="new-email"
                      required
                      class="rounded text-black dark:text-white bg-white dark:bg-gray-900"
                    />
                    <label for="email" class="label-name">
                      <span
                        class="content-name font-semibold text-black dark:text-gray-200"
                        >Email</span
                      >
                    </label>
                  </div>
                  <!-- Password input -->
                  <div class="form mt-5 relative">
                    <input
                      type="password"
                      name="password"
                      autocomplete="new-password"
                      required
                      class="rounded text-black dark:text-white bg-white dark:bg-gray-900 hPassword"
                    />
                    <label for="password" class="label-name">
                      <span
                        class="content-name font-semibold text-black dark:text-gray-200"
                        >Password</span
                      >
                    </label>
                    <i
                      class="fa-solid fa-eye absolute right-3 bottom-3 togglePassword cursor-pointer dark:text-white"
                      id="password"
                    ></i>
                  </div>
                  <button
                    type="submit"
                    class="dark:bg-black dark:text-white free mt-5 tracking-wide font-semibold bg-indigo-500 text-gray-100 w-full py-4 rounded-lg hover:bg-indigo-700 transition-all duration-300 ease-in-out flex items-center justify-center focus:shadow-outline focus:outline-none"
                  >
                    <i
                      class="dark:bg-black dark:text-white fa-solid fa-right-to-bracket free w-6 h-6 pt-1"
                    ></i>
                    <span class="dark:bg-black dark:text-white free ml-3">
                      Login
                    </span>
                  </button>
                </form>
                <p
                  class="dark:bg-black dark:text-white mb-4 mt-3 text-xs text-right"
                >
                  <a
                    href="/signup"
                    class="dark:bg-black dark:text-white text-blue-600 font-semibold drop-shadow-md"
                    >Don't have an account? Sign up now</a
                  >
                </p>
              </div>
            </div>
          </div>
        </div>
        <div
          class="dark:bg-black dark:text-white flex-1 bg-indigo-100 text-center hidden lg:flex"
        >
          <div
            class="dark:bg-black dark:text-white m-12 xl:m-16 w-full bg-contain bg-center bg-no-repeat"
            style="
              background-image: url('https://storage.googleapis.com/devitary-image-host.appspot.com/15848031292911696601-undraw_designer_life_w96d.svg');
            "
          ></div>
        </div>
      </div>
    </div>
    <!-- Google Login Button -->
    <h2 class="text-xl text-purple-800 font-semibold">Social Login</h2>
    <div class="w-96 mx-auto mb-8 mt-3 px-8">
      <a
        href="/auth/google"
        class="flex items-center justify-center gap-3 px-6 py-3 bg-white text-gray-700 border border-gray-300 rounded-full shadow hover:shadow-md transition"
      >
        <img
          src="https://developers.google.com/identity/images/g-logo.png"
          alt="Google logo"
          class="w-6 h-6"
        />
        <span class="font-medium">SignIn with Google</span>
      </a>
    </div>

    <%- include('partials/footer') %>
    <script src="script.js"></script>
    <script>
      let passwordIcon = document.getElementById("password");
      let hPassword = document.querySelector(".hPassword"); // Select the first input element

      passwordIcon.addEventListener("click", () => {
        if (hPassword.type === "password") {
          hPassword.type = "text";
          passwordIcon.classList.remove("fa-eye");
          passwordIcon.classList.add("fa-eye-slash"); // Change icon to 'hide'
        } else {
          hPassword.type = "password";
          passwordIcon.classList.remove("fa-eye-slash");
          passwordIcon.classList.add("fa-eye"); // Change icon back to 'show'
        }
      });
    </script>
  </body>
</html>
