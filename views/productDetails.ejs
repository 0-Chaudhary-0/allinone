<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head') %>
</head>

<body class="bg-gray-100 text-black font-sans">
    <%- include('partials/header') %>

    <div class="container mx-auto mt-10">
        <div class="max-w-4xl mx-auto rounded-lg shadow-lg p-6">
            <div class="flex flex-wrap -mx-4">
                <!-- Product Image -->
                <div class="w-full md:w-1/2 px-4">
                    <img src="<%= product.img %>" alt="<%= product.title %>" class="rounded-lg w-full">
                </div>

                <!-- Product Details -->
                <div class="w-full md:w-1/2 px-4">
                    <h1 class="text-3xl font-bold text-gray-900"><%= product.title %></h1>
                    <p class="text-gray-700 mt-4"><%= product.desc %></p>
                    <div class="mt-6">
                        <span class="text-3xl font-bold text-green-600">$<%= product.price %></span>
                    </div>
                    <div class="flex my-3 gap-4">
                    <button
                        class="btn-xs text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800 add-in-bag"
                        data-product="<%= JSON.stringify(product) %>">
                        Add to Bag
                      </button>
                    <button class="btn-xs px-5 py-2.5 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition duration-300 text-sm">
                        <a href="checkout.ejs/id=<%=product._id%>">Checkout</a>
                    </button>
                </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>
    <script src="script.js"></script>
    <script src="shopping.js"></script>
</body>

</html>
