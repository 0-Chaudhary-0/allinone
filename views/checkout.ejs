<!DOCTYPE html>
<html lang="en">

<head>
  <script src="https://js.stripe.com/v3/"></script>
  <%- include('partials/head') %>
  <title>Checkout | Complete Your Purchase on Allinone</title>
  <link rel="stylesheet" href="/css/input.css">
</head>

<body class="dark:bg-black dark:text-white font-sans leading-normal tracking-normal">
  <%- include('partials/header') %>

  <div class="dark:bg-gray-900 dark:text-gray-100 min-h-screen flex justify-center px-4 py-2">
    <div class="dark:bg-gray-900 dark:text-white bg-white max-w-3xl w-full p-4 transition-transform transform hover:scale-[1.01] duration-300">

      <!-- Product Details -->
      <div id="product-details" class="space-y-4">
        <h1 class="text-2xl font-bold text-gray-800 border-b pb-2">üõçÔ∏è Product Details</h1>
        <!-- JS will populate product info here -->
      </div>

      <!-- Address Form -->
      
      <div class="mt-4 space-y-2">
        <h2 class="text-lg font-semibold text-gray-900 dark:text-">Shipping Address</h2>

        <!-- Full Name Input -->
        
        <div class="form mt-5">
          <input
            type="text"
            id="name"
            name="email"
            autocomplete="off"
            required
            class="rounded text-black dark:text-white bg-white dark:bg-gray-900"
          />
          <label for="name" class="label-name">
            <span class="content-name font-semibold text-black dark:text-gray-200">Full Name</span>
          </label>
        </div>
        
        <!-- Email Input -->
        
        <div class="form mt-5">
          <input
            id="email"
            type="email"
            autocomplete="new-email"
            required
            class="rounded text-black dark:text-white bg-white dark:bg-gray-900"
          />
          <label for="email" class="label-name">
            <span class="content-name font-semibold text-black dark:text-gray-200">Email</span>
          </label>
        </div>
          
        <!-- Phone Number Input -->
        
        <div class="form mt-5">
          <input
            id="phone"
            type="tel"
            autocomplete="off"
            required
            class="rounded text-black dark:text-white bg-white dark:bg-gray-900"
          />
          <label for="phone" class="label-name">
            <span class="content-name font-semibold text-black dark:text-gray-200">Phone</span>
          </label>
        </div>
        
        <!-- City Input -->
        
        <div class="form mt-5">
            <input
              type="text"
              id="city"
              autocomplete="off"
              required
              class="rounded text-black dark:text-white bg-white dark:bg-gray-900"
            />
            <label for="city" class="label-name">
              <span class="content-name font-semibold text-black dark:text-gray-200">City</span>
            </label>
          </div>

          <!-- Postal Code Input -->
          
          <div class="form mt-5">
            <input
              type="text"
              id="postalCode"
              autocomplete="off"
              required
              class="rounded text-black dark:text-white bg-white dark:bg-gray-900"
            />
            <label for="postalCode" class="label-name">
              <span class="content-name font-semibold text-black dark:text-gray-200">PostalCode</span>
            </label>
          </div>

          <!-- Street Address Input -->

          <div class="form mt-5">
            <input
              type="text"
              id="street"
              autocomplete="new-email"
              required
              class="rounded text-black dark:text-white bg-white dark:bg-gray-900"
            />
            <label for="street" class="label-name">
              <span class="content-name font-semibold text-black dark:text-gray-200">Street Address</span>
            </label>
          </div>
        
        </div>

      <!-- Payment Method -->
      <hr class="h-1 bg-gray-400 mt-5 border-0 rounded">

      <div class="flex flex-col md:flex-row gap-4 mt-4">
        <label
          class="flex items-center gap-2 p-3 bg-gray-50 rounded-lg shadow-sm cursor-pointer hover:bg-gray-100 transition">
          <input type="radio" name="payment-method" value="card" id="card-radio" checked
            class="form-radio text-black focus:ring-0" />
          <span class="text-gray-900"><i class="fa-brands fa-cc-mastercard"></i> Credit/Debit Card</span>
        </label>

        <label
          class="flex items-center gap-2 p-3 bg-gray-50 rounded-lg shadow-sm cursor-pointer hover:bg-gray-100 transition">
          <input type="radio" name="payment-method" value="cod" id="cod-radio"
            class="form-radio text-gray-100 focus:ring-0 " />
          <span class="text-gray-700"><i class="fa-solid fa-money-bill-1-wave"></i> Cash on Delivery (COD)</span>
        </label>
      </div>

      <!-- Stripe Card Details -->
      <div id="card-details" class="mt-6">
        <label for="card-number" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Card Details</label>
        <div id="card-number" class="w-full p-3 border rounded dark:bg-white"></div>
      </div>

      <!-- Place Order Button -->
      <div class="text-right">
        <button id="next-btn"
          class="w-full my-4 bg-blue-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-blue-700 transition-shadow shadow-md hover:shadow-lg">
          Place Order ‚û§
        </button>
      </div>

    </div>
  </div>

  <%- include('partials/footer') %>

  <script>
    window.userId = "<%= userId %>";
  </script>
  <script src="/payment.js"></script>
  <script src="/checkout_product.js"></script>
  <script src="/script.js"></script>

</body>

</html>
