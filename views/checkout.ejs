<!DOCTYPE html>
<html lang="en">

<head>
  <script src="https://js.stripe.com/v3/"></script>
  <%- include('partials/head') %>
</head>

<body class="dark:bg-black dark:text-white bg-gray-100 font-sans leading-normal tracking-normal">
  <%- include('partials/header') %>

    <div class="dark:bg-black dark:text-white min-h-screen flex justify-center px-4 py-2 my-10">
      <div class="dark:bg-black dark:text-white bg-white max-w-3xl w-full p-4 transition-transform transform hover:scale-[1.01] duration-300">

        <!-- Product Details -->
        <div id="product-details" class="dark:bg-black dark:text-white space-y-4">
          <h1 class="dark:bg-black dark:text-white text-2xl font-bold text-gray-800 border-b pb-2">
            üõçÔ∏è Product Details
          </h1>
          <!-- JS will populate product info here -->
        </div>

        <!-- Address Section -->
        
      <!-- Address Form -->
      <div class="dark:bg-black dark:text-white mt-4">
        <h2 class="dark:bg-black dark:text-white text-lg font-semibold text-gray-700">Shipping Address</h2>
        
        <input id="name" type="text" placeholder="Full Name" 
          class="dark:bg-black dark:text-white w-full p-3 mt-2 border rounded focus:ring-2 focus:ring-blue-500" required />
        
        <input id="email" type="email" placeholder="Email Address" 
          class="dark:bg-black dark:text-white w-full p-3 mt-2 border rounded focus:ring-2 focus:ring-blue-500" required />
        
        <input id="phone" type="tel" placeholder="Phone Number (PK: 03XXXXXXXXX)" pattern="03[0-9]{9}" 
          class="dark:bg-black dark:text-white w-full p-3 mt-2 border rounded focus:ring-2 focus:ring-blue-500" required />

        <input id="province" type="text" placeholder="Country"
          class="dark:bg-black dark:text-white w-full p-3 mt-2 border rounded focus:ring-2 focus:ring-blue-500" required />
        
        <input id="city" type="text" placeholder="City" 
          class="dark:bg-black dark:text-white w-full p-3 mt-2 border rounded focus:ring-2 focus:ring-blue-500" required />

        <input id="postalCode" type="text" placeholder="Postal Code" 
          class="dark:bg-black dark:text-white w-full p-3 mt-2 border rounded focus:ring-2 focus:ring-blue-500" required />

        <input id="street" type="text" placeholder="Street Address" 
          class="dark:bg-black dark:text-white w-full p-3 mt-2 border rounded focus:ring-2 focus:ring-blue-500" required />
      </div>


        <!-- Payment Method -->
        <hr class="dark:bg-black dark:text-white h-1 bg-gray-400 mt-5 border-0 rounded">

        <div class="dark:bg-black dark:text-white flex flex-col md:flex-row gap-4">
          <label
            class="dark:bg-black dark:text-white flex items-center gap-2 p-3 bg-gray-50 rounded-lg shadow-sm cursor-pointer hover:bg-gray-100 transition">
            <input type="radio" name="payment-method" value="card" id="card-radio" checked
              class="dark:bg-black dark:text-white free form-radio text-blue-500 focus:ring-0" />
            <span class="dark:bg-black dark:text-white text-gray-700">üí≥ Credit/Debit Card</span>
          </label>

          <label
            class="dark:bg-black dark:text-white flex items-center gap-2 p-3 bg-gray-50 rounded-lg shadow-sm cursor-pointer hover:bg-gray-100 transition">
            <input type="radio" name="payment-method" value="cod" id="cod-radio"
              class="dark:bg-black dark:text-white free form-radio text-blue-500 focus:ring-0" />
            <span class="dark:bg-black dark:text-white text-gray-700">üí¥ Cash on Delivery (COD)</span>
          </label>
        </div>

        <!-- Card Details Section (Hidden for COD) -->
        <div id="card-details" class="dark:bg-black dark:text-white mt-6">
          <input type="text" placeholder="Card Number" id="card-number"
            class="dark:bg-black dark:text-white w-full p-3 border rounded focus:ring-2 focus:ring-blue-500" />
          <input type="text" placeholder="Expiry Date (MM/YY)" id="expiry-date"
            class="dark:bg-black dark:text-white w-full p-3 mt-2 border rounded focus:ring-2 focus:ring-blue-500" />
          <input type="text" placeholder="CVV" id="cvv"
            class="dark:bg-black dark:text-white w-full p-3 mt-2 border rounded focus:ring-2 focus:ring-blue-500" />
        </div>

        <!-- Place Order Button -->
        <div class="dark:bg-black dark:text-white text-right">
          <button id="next-btn"
            class="dark:bg-black dark:text-white free w-full my-4 bg-blue-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-blue-700 transition-shadow shadow-md hover:shadow-lg">
            Place Order ‚û§
          </button>
        </div>

      </div>
    </div>

    <%- include('partials/footer') %>
      <script src="/payment.js"></script>
      <script src="/checkout_product.js"></script>
      <script>
        window.userId = "<%= userId %>";
      </script>
</body>

</html>