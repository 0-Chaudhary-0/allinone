<!DOCTYPE html>
<html lang="en">

<head>
  <script src="https://js.stripe.com/v3/"></script>
  <%- include('partials/head') %>
</head>

<body class="dark:bg-black dark:text-white bg-gray-100 font-sans leading-normal tracking-normal">
  <%- include('partials/header') %>

  <div class="dark:bg-black dark:text-white min-h-screen flex justify-center px-4 py-2 my-10">
    <div class="dark:bg-black dark:text-white bg-white max-w-3xl w-full p-4 transition-transform transform hover:scale-[1.01] duration-300">

      <!-- Product Details -->
      <div id="product-details" class="space-y-4">
        <h1 class="text-2xl font-bold text-gray-800 border-b pb-2">üõçÔ∏è Product Details</h1>
        <!-- JS will populate product info here -->
      </div>

      <!-- Address Form -->
      <div class="mt-4 space-y-2">
        <h2 class="text-lg font-semibold text-gray-700">Shipping Address</h2>

        <input id="name" type="text" placeholder="Full Name"
          class="w-full p-3 border rounded focus:ring-2 focus:ring-blue-500" required />
        <input id="email" type="email" placeholder="Email Address"
          class="w-full p-3 border rounded focus:ring-2 focus:ring-blue-500" required />
        <input id="phone" type="tel" placeholder="Phone Number (PK: 03XXXXXXXXX)" pattern="03[0-9]{9}"
          class="w-full p-3 border rounded focus:ring-2 focus:ring-blue-500" required />
        <input id="province" type="text" placeholder="Country"
          class="w-full p-3 border rounded focus:ring-2 focus:ring-blue-500" required />
        <input id="city" type="text" placeholder="City"
          class="w-full p-3 border rounded focus:ring-2 focus:ring-blue-500" required />
        <input id="postalCode" type="text" placeholder="Postal Code"
          class="w-full p-3 border rounded focus:ring-2 focus:ring-blue-500" required />
        <input id="street" type="text" placeholder="Street Address"
          class="w-full p-3 border rounded focus:ring-2 focus:ring-blue-500" required />
      </div>

      <!-- Payment Method -->
      <hr class="h-1 bg-gray-400 mt-5 border-0 rounded">

      <div class="flex flex-col md:flex-row gap-4 mt-4">
        <label
          class="flex items-center gap-2 p-3 bg-gray-50 rounded-lg shadow-sm cursor-pointer hover:bg-gray-100 transition">
          <input type="radio" name="payment-method" value="card" id="card-radio" checked
            class="form-radio text-blue-500 focus:ring-0" />
          <span class="text-gray-700"><i class="fa-brands fa-cc-mastercard"></i> Credit/Debit Card</span>
        </label>

        <label
          class="flex items-center gap-2 p-3 bg-gray-50 rounded-lg shadow-sm cursor-pointer hover:bg-gray-100 transition">
          <input type="radio" name="payment-method" value="cod" id="cod-radio"
            class="form-radio text-blue-500 focus:ring-0" />
          <span class="text-gray-700"><i class="fa-solid fa-money-bill-1-wave"></i> Cash on Delivery (COD)</span>
        </label>
      </div>

      <!-- Stripe Card Details -->
      <div id="card-details" class="mt-6">
        <label for="card-number" class="block mb-2 text-sm font-medium text-gray-700">Card Details</label>
        <div id="card-number" class="w-full p-3 border rounded focus:ring-2 focus:ring-blue-500"></div>
      </div>

      <!-- Place Order Button -->
      <div class="text-right">
        <button id="next-btn"
          class="w-full my-4 bg-blue-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-blue-700 transition-shadow shadow-md hover:shadow-lg">
          Place Order ‚û§
        </button>
      </div>

    </div>
  </div>

  <%- include('partials/footer') %>

  <script>
    window.userId = "<%= userId %>";
  </script>
  <script src="/payment.js"></script>
  <script src="/checkout_product.js"></script>
  <script src="/script.js"></script>

</body>

</html>
