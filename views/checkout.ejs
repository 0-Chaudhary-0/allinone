<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('partials/head') %>
</head>

<body class="bg-gray-100 font-sans leading-normal tracking-normal">
  <%- include('partials/header') %>

    <div class="min-h-screen flex justify-center px-4 py-2 my-10">
      <div class="bg-white max-w-3xl w-full p-4 transition-transform transform hover:scale-[1.01] duration-300">

        <!-- Product Details -->
        <div id="product-details" class="space-y-4">
          <h1 class="text-2xl font-bold text-gray-800 border-b pb-2">
            🛍️ Product Details
          </h1>
          <!-- JS will populate product info here -->
        </div>

        <!-- Payment Method -->
        <hr class="free h-1 bg-gray-400 mt-5 border-0 rounded">
        <div class="my-8">
          <h2 class="text-xl font-semibold text-gray-800 mb-4">
             Select Payment Method
          </h2>
          <div class="flex flex-col md:flex-row gap-4">
            <label
              class="flex items-center gap-2 p-3 bg-gray-50 rounded-lg shadow-sm cursor-pointer hover:bg-gray-100 transition">
              <input type="radio" name="payment-method" value="card" class="free form-radio text-blue-500 focus:ring-0"
                checked />
              <span class="text-gray-700">💳 Credit/Debit Card</span>
            </label>
            <label
              class="flex items-center gap-2 p-3 bg-gray-50 rounded-lg shadow-sm cursor-pointer hover:bg-gray-100 transition">
              <input type="radio" name="payment-method" value="cod" class="free form-radio text-blue-500 focus:ring-0" />
              <span class="text-gray-700">💴 Cash on Delivery (COD)</span>
            </label>
          </div>
        </div>

        <!-- Next Button -->
        <div class="text-right">
          <button id="next-btn"
            class="free w-full my-4 bg-blue-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-blue-700 transition-shadow shadow-md hover:shadow-lg">
            Next →
          </button>

        </div>
      </div>
    </div>

    <%- include('partials/footer') %>
      <script src="/script.js"></script>
      <script src="/checkout_product.js"></script>
</body>

</html>